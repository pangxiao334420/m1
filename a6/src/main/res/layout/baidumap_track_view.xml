<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.baidu.mapapi.map.TextureMapView
        android:id="@+id/baidumap_tarck_bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />
   
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >
        
        <ImageView
	        android:id="@+id/baidumap_tarck_follow_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		 	android:scaleType="centerInside"
			android:visibility="gone"
		 	android:src="@drawable/btn_my_location" />
        
        <ImageView
	        android:id="@+id/baidumap_tarck_car_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
		 	android:scaleType="centerInside"
			android:visibility="gone"
		 	android:src="@drawable/btn_my_car" />
    </LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="10dp"
		android:orientation="vertical"
		android:visibility="gone">

		<ImageView
			android:id="@+id/baidumap_tarck_zoom_out"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/press_selector"
			android:scaleType="centerInside"
			android:src="@drawable/zoom_out" />

		<ImageView
			android:id="@+id/baidumap_tarck_zoom_in"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:background="@drawable/press_selector"
			android:scaleType="centerInside"
			android:src="@drawable/zoom_in" />

	</LinearLayout>

	<TextView
		android:id="@+id/baidumap_track_time"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:background="#9F000000"
		android:gravity="center"
		android:padding="5dp"
		android:textColor="#ffffff"
		android:visibility="gone" />
      
</RelativeLayout>
