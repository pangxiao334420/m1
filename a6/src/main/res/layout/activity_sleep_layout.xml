<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_gray"
              android:orientation="vertical">

    <View
        style="@style/Divider"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:id="@+id/layout_sleep_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sleep_time_name"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="@string/str_sleep_time"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_sleep_time"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:drawablePadding="@dimen/small"
            android:drawableRight="@drawable/ic_more"
            android:gravity="center_vertical"
            android:textSize="14sp"/>

    </RelativeLayout>

    <View style="@style/Divider"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="6dp"
        android:paddingLeft="16dp"
        android:paddingTop="6dp"
        android:text="@string/hint_setting_sleep"
        android:textColor="@color/font_999"
        android:textSize="12sp"/>

    <View style="@style/Divider"/>

    <LinearLayout
        android:id="@+id/layout_share_validity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_share_validity_name"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/str_share_validity"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_share_validity_time"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:drawablePadding="@dimen/small"
            android:drawableRight="@drawable/ic_more"
            android:gravity="center_vertical"
            android:textSize="14sp"/>

    </LinearLayout>

    <View style="@style/Divider"/>

</LinearLayout>