<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/user_login_bg"
              android:orientation="vertical">

    <!-- 个人资料title -->

    <include layout="@layout/user_personal_info_title"/>

    <!-- body -->

    <RelativeLayout
        android:id="@+id/user_personal_info_head_layout"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_white"
        android:orientation="vertical">

        <View
            style="@style/LineDivider"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/user_personal_info_modify_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/user_personal_avatar"
                android:textColor="@color/user_personal_black"
                android:textSize="16sp"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/user_personal_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_more"/>

        <ImageView
            android:id="@+id/user_personal_info_head"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_toLeftOf="@+id/user_personal_arrow1"
            android:contentDescription="@string/imgdes"/>

        <View
            style="@style/LineDivider"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/user_personal_solid_3"
        style="@style/LineDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/user_personal_info_name_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/user_personal_edit_name"
                android:textColor="@color/user_personal_color"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/nickname"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_personal_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:singleLine="true"
                    android:textColor="@color/user_personal_black"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/user_personal_arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/user_personal_info_name"
                    android:src="@drawable/ic_more"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/user_personal_solid_4"
            style="@style/LineDividerMarginLeft"/>

        <LinearLayout
            android:id="@+id/user_personal_info_sign_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/user_personal_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/email_account"
                android:textColor="@color/user_personal_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/user_personal_info_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/user_personal_arrow3"
                android:textColor="@color/user_personal_black"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/user_personal_arrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_more"/>

        </LinearLayout>

        <View
            android:id="@+id/user_personal_solid_5"
            style="@style/LineDivider"/>

    </LinearLayout>

    <View
        style="@style/LineDivider"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:id="@+id/layout_change_pwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_white"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:text="@string/change_pwd"
            android:textColor="@color/user_personal_color"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_more"/>

    </RelativeLayout>

    <View
        style="@style/LineDivider"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@drawable/selector_red_btn"
        android:text="@string/exit"
        android:textColor="@color/white"
        android:textSize="18sp"/>


</LinearLayout>