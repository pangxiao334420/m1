<?xml version="1.0" encoding="utf-8"?><!-- 微博列表界面tab栏关注 按钮 -->  
<selector xmlns:android="http://schemas.android.com/apk/res/android">  
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <size
                android:width="400dp"
                android:height="4dp" />
            <solid 
        		android:color="#5677FC" />
            
        </shape>
    </item> 
    
    <item android:state_checked="true" >
        <shape android:shape="rectangle">
            <size
                android:width="400dp"
                android:height="4dp" />
            
            <solid 
        		android:color="#5677FC" />
            
        </shape>
    </item>
    
    <item >
        <shape android:shape="rectangle">
            <size
                android:width="400dp"
                android:height="4dp" />
            <solid 
        		android:color="#00000000" />
            
        </shape>
   	</item>  
</selector>  
